var new_post = $("#new_post");
<% if @post.errors.any? %>
  new_post.replaceWith("<%= escape_javascript(render('posts/post_form')) %>");
<% else %>
  new_post.find('input:text,textarea').val('');
  new_post.find('#error_explanation').empty();
  $("#feed").replaceWith("<%= escape_javascript(render('shared/feed')) %>");
  $("#flash").replaceWith("<%= escape_javascript(render 'shared/flash_messages') %>");
<% end %>