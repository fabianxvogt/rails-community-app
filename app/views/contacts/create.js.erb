var new_contact = $("#new_contact");
<% if @contact.errors.any? %>
	new_contact.replaceWith("<%= escape_javascript(render('contacts/form', contact: @contact)) %>");
	$('#contact_name').focus();
<% else %>
	new_contact.find('.field_with_errors').removeClass('field_with_errors');
	new_contact.find('input:text,textarea').val('');
	new_contact.find('#error_explanation').empty();
	new_contact.replaceWith("<%= escape_javascript(render('contacts/form', contact: @contact)) %>");
	$('#contact_name').focus();
	$("#flash").replaceWith("<%= escape_javascript(render 'shared/flash_messages') %>");
<% end %>
