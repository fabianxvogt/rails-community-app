<% provide(:title, t('page_title.contact')) %>

<h1><%= t('community.about_board_of_directors') %></h1>

<div class="text-center">
  <p><%= t('community.about_board_of_directors_chairman') + ' : ' +
             t('community.about_board_of_directors_chairman_name') %></p>
  <p><%= t('community.about_board_of_directors_vice_chairman') + ' : ' +
             t('community.about_board_of_directors_vice_chairman_name') %></p>
  <p><%= t('community.about_board_of_directors_treasurer') + ' : ' +
             t('community.about_board_of_directors_treasurer_name') %></p>
</div>

<h1><%= t('community.contact_html', community_name: t('community.name')) %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@contact, url: contact_path) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name, t('.name') %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email, t('.email') %>
        <%= f.text_field :email, class: 'form-control' %>

        <%= f.label :subject, t('.subject') %>
        <%= f.text_field :subject, class: 'form-control' %>

        <%= f.label :message, t('.message') %>
        <%= f.text_area :message, class: 'form-control' %>

        <%= f.submit t('.submit'), data: {disable_with: t('.submitting')}, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>