- provide(:title, t('page_title.edit_user'))
- provide(:button_text, t('save_changes'))
h1
  = t('update_your_profile')
.row
  .col-md-6.col-md-offset-3
    = render 'form'
    .gravatar_edit
      = gravatar_for @user
      a[href="http://gravatar.com/emails" target="_blank" rel="noopener"]
        = t('change')
