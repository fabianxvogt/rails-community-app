<%= render 'static_pages/introduction_carousel' %>

<%= render 'static_pages/introduction' %>

<% if can? :create, @post %>
  <%= render 'posts/post_form_modal', post: @post %>

  <%= link_to "<span class=\"pull-right glyphicon glyphicon-plus\"
      aria-label=\"#{t('compose_new_post')}\"></span>".html_safe,
              '#', data: {toggle: 'modal', target: '#new-post-modal'} %>
<% end %>

<div id="news_anchor"></div>
<%= render 'shared/feed' %>

<%= render 'facebook/fb_feed' %>

<div id="membership_anchor"></div>
<%= render 'static_pages/membership' %>

<div id="contact_anchor"></div>
<%= render 'contacts/board_of_directors' %>
<%= render 'contacts/contact' %>

<div id="directions_anchor"></div>
<%= render 'contacts/directions' %>