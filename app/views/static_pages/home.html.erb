<div class="center jumbotron">
  <h1>Community App</h1>
  <p>
    This is the <%= yield(:title) %> page for the community.
  </p>
</div>

<div class="container-fluid">
  <div class="row">
    <% if @posts.any? %>
        <ol class="posts">
          <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
    <% end %>
  </div>
</div>