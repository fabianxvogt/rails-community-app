<div class="center jumbotron">
  <h1>Community App</h1>
  <p>
    This is the <%= yield(:title) %> page for the community.
  </p>
</div>
<div class="row">
  <div class="col-md-12">
    <%= render 'shared/feed' %>
  </div>

  <% if logged_in? %>
      <% if current_user.admin? %>
          <div class="col-md-12 new-post">
            <%= render 'shared/post_form' %>
          </div>
      <% end %>
  <% end %>
</div>