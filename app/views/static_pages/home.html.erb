<div class="center jumbotron">
  <h1><%= full_title %></h1>
  <p>
    <%= t('community_page_description') %>
  </p>
  <div id="news_anchor"></div>
</div>

<% if logged_in? && current_user.admin? %>
    <%= render 'posts/post_form' %>
<% end %>

<% if @feed && @feed.any? %>
    <div class="row">
      <%= render 'shared/feed' %>
    </div>
<% end %>
<% if @fb_feed && @fb_feed.any? %>
    <div class="row">
      <div id="fb-feed" class="feed">
        <% @fb_feed.each do |post| %>
            <%= render 'shared/fb_story', post: post %>
        <% end %>
      </div>
    </div>
<% end %>
