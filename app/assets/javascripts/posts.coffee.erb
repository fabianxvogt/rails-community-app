@checkImageSize = (picture_input) ->
  size_in_megabytes = picture_input.files[0].size / 1024 / 1024
  if size_in_megabytes > 5
    alert '<%= I18n.t('maximum_file_size_alert') %>'
    picture_input.outerHTML = picture_input.outerHTML
  return